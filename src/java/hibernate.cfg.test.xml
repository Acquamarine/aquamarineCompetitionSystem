<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">org.hsqldb.jdbcDriver</property>
        <property name="hibernate.connection.url">jdbc:hsqldb:MyDB</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="connection.password"></property>
        <property name="connection.pool_size">1</property>
        <property name="hibernate.dialect">org.hibernate.dialect.HSQLDialect</property>
        <property name="show_sql">true</property>
        <property name="hbm2ddl.auto">create</property>  
        <mapping class="it.unical.ea.aquamarine.multigamingCompetitionSystem.core.users.AbstractCompetitor"/>  	
        <mapping class="it.unical.ea.aquamarine.multigamingCompetitionSystem.core.users.RegisteredUser"/>  	
        <mapping class="it.unical.ea.aquamarine.multigamingCompetitionSystem.core.users.Team"/>  	
        <mapping class="it.unical.ea.aquamarine.multigamingCompetitionSystem.games.matchResults.TwoCompetitorsMatchResult"/>  	
        <mapping class="it.unical.ea.aquamarine.multigamingCompetitionSystem.shopAndItems.CompetitorInventory"/>  	
        <mapping class="it.unical.ea.aquamarine.multigamingCompetitionSystem.shopAndItems.ItemSet"/>  	
        <mapping class="it.unical.ea.aquamarine.multigamingCompetitionSystem.shopAndItems.items.AbstractItem"/>  	
    </session-factory>
</hibernate-configuration>